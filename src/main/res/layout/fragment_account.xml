<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_142"
        android:background="@drawable/account_item_bg">

        <TextView
            android:id="@+id/account_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layout_60"
            android:textColor="@color/color666666"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/account_picture"
        android:layout_width="@dimen/layout_80"
        android:layout_height="@dimen/layout_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_102"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>