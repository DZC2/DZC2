<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shop_jian"
            android:layout_width="@dimen/layout_50"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="-"
            android:textSize="@dimen/text_20" />

        <EditText
            android:id="@+id/shop_edit"
            android:layout_width="@dimen/layout_102"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_5"
            android:layout_marginRight="@dimen/layout_5"
            android:layout_toRightOf="@+id/shop_jian"
            android:background="@drawable/shop_car_edit_bg"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/shop_add"
            android:layout_width="@dimen/layout_50"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/shop_edit"
            android:gravity="center_horizontal"
            android:text="+"
            android:textSize="@dimen/text_20" />

    </RelativeLayout>

</RelativeLayout>