<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_166"
    android:background="@color/colorFFFFFF"
    android:padding="@dimen/layout_10">

    <LinearLayout
        android:layout_width="@dimen/layout_105"
        android:layout_height="@dimen/layout_166"
        android:background="@drawable/rxxp_shap_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rxxp_img"
            android:layout_width="@dimen/layout_85"
            android:layout_height="@dimen/layout_99"
            android:layout_marginLeft="@dimen/layout_10"
            android:layout_marginRight="@dimen/layout_10" />

        <TextView
            android:id="@+id/rxxp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_10"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/color666666"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/rxxp_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_10"
            android:textColor="@color/colorff0000"
            android:textSize="@dimen/text_14" />

    </LinearLayout>
</RelativeLayout>