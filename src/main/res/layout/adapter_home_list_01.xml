<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_rxxp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_30"
        android:background="@drawable/rxxp_bg">

        <TextView
            android:id="@+id/home_list_01_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorFF7F57"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_24"
            android:src="@drawable/rxxp_more" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/layout_rxxp"
        android:id="@+id/recycler_rxxp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>