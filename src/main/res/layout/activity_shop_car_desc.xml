<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShopCarDescActivity">

    <com.stx.xhb.xbanner.XBanner
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/xbanner"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xbanner"
        android:id="@+id/tv_shop_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_title"
        android:id="@+id/tv_shop_price"
        android:textColor="@color/colorff0000"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_price"
        android:text="添加购物车"
        android:id="@+id/add_shop_car"
        />
</RelativeLayout>